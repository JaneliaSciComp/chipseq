nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"
    tag "test_skip_trimming"
    tag "pipeline"

    test("Skip Trimming") {

        when {
            params {
                outdir        = "$outputDir"
                skip_trimming = true
            }
        }

        then {
            assertAll(
                { assert workflow.success }
            )
        }

    }

}
